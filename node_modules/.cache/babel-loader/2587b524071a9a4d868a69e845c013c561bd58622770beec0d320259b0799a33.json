{"ast":null,"code":"import { Vue3Marquee } from \"vue3-marquee\";\nimport \"vue3-marquee/dist/style.css\";\nexport default {\n  name: \"MusicDetail\",\n  props: [\"musicList\", \"isbtnShow\", \"changeDetailShow\", \"play\", \"detailShow\", \"lyricList\", \"currentTime\"],\n  mounted() {\n    console.log(this.musicList);\n  },\n  components: {\n    Vue3Marquee\n  },\n  data() {\n    return {\n      isLyricShow: false\n    };\n  },\n  watch: {\n    currentTime: function () {\n      let p = document.querySelector(\"p.active\");\n      if (p.offsetTop > 300) {\n        this.$refs.musicLyric.scrollTop = p.offsetTop - 250;\n      }\n    }\n  },\n  computed: {\n    lyric: function () {\n      let arr;\n      if (this.lyricList.lrc.lyric) {\n        arr = this.lyricList.lrc.lyric.split(/[(\\r\\n)\\r\\n]+/).map((item, i) => {\n          let min = item.slice(1, 3);\n          let sec = item.slice(4, 6);\n          let mill = item.slice(item.indexOf('.') + 1, item.indexOf(']'));\n          let lrc = item.slice(11, item.length);\n          let time = parseInt(min) * 60 * 1000 + parseInt(sec) * 1000 + parseInt(mill);\n          console.log(min, sec, mill, lrc, time);\n          return {\n            min,\n            sec,\n            mill,\n            lrc,\n            time\n          };\n        });\n        arr.forEach((item, i) => {\n          if (i === arr.length - 1) {\n            item.next = 0;\n          } else {\n            item.next = arr[i + 1].time;\n          }\n        });\n      }\n      console.log(arr);\n      return arr;\n    }\n  }\n};","map":{"version":3,"names":["Vue3Marquee","name","props","mounted","console","log","musicList","components","data","isLyricShow","watch","currentTime","p","document","querySelector","offsetTop","$refs","musicLyric","scrollTop","computed","lyric","arr","lyricList","lrc","split","map","item","i","min","slice","sec","mill","indexOf","length","time","parseInt","forEach","next"],"sources":["D:\\java项目\\网易云音乐\\wangyiyun-app\\src\\